<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KtpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="#5C91E6"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:text="  MyData"
        android:textColor="#3381FF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Kartu Tanda Kependudukan"
        android:textColor="#3381FF"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Masukkan Data Anda !"
        android:textColor="#3381FF"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="40dp"
        android:hint="Alamat"
        android:inputType="text"
        android:textColor="#3381FF"
        android:textColorHint="#3381FF" />

    <EditText
        android:id="@+id/fill2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:hint="Nama"
        android:inputType="text"
        android:textColor="#3381FF"
        android:textColorHint="#3381FF"/>

    <EditText
        android:id="@+id/fill3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="10dp"
        android:hint="Tempat Lahir"
        android:inputType="text"
        android:textColor="#3381FF"
        android:textColorHint="#3381FF"/>

    <TextView
        android:id="@+id/fill4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="55dp"
        android:textSize="18dp"
        android:drawableRight="@drawable/button_calendar"
        android:hint="Tanggal Lahir"
        android:textColor="#3381FF"
        android:textColorHint="#3381FF"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/Login4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:backgroundTint="#3381FF"
        android:text="Kirim"
        android:textSize="20dp"
        android:layout_marginTop="103dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="145dp"
        android:background="#3381FF">

        <ImageView
            android:id="@+id/home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/home1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="170dp"
            android:src="@drawable/calendar" />

    </LinearLayout>

</LinearLayout>