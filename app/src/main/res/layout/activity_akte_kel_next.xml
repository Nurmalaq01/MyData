<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AkteKel_Next">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="40dp"
        android:shadowColor="#5C91E6"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="5"
        android:textStyle="bold"
        android:textColor="#3381FF"
        android:text="MyData"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#3381FF"
        android:text="AKTA KELAHIRAN"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textColor="#3381FF"
        android:text="Masukkan Data Anda !"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#3381FF"
            android:text="Kartu Keluarga"/>
        <TextView
            android:id="@+id/file"
            android:layout_width="170dp"
            android:textSize="20dp"
            android:textColorHint="#3381FF"
            android:hint="Masukkan file"
            android:drawableRight="@drawable/file"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#3381FF"
            android:text="E-KTP Ibu"/>
        <TextView
            android:layout_width="170dp"
            android:textSize="20dp"
            android:textColorHint="#3381FF"
            android:hint="Masukkan file"
            android:drawableRight="@drawable/file"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#3381FF"
            android:text="E-KTP Ayah"/>
        <TextView
            android:layout_width="170dp"
            android:textSize="20dp"
            android:textColorHint="#3381FF"
            android:hint="Masukkan file"
            android:drawableRight="@drawable/file"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#3381FF"
            android:text="Surat Keterangan Kelahiran"/>
        <TextView
            android:layout_width="170dp"
            android:textSize="20dp"
            android:textColorHint="#3381FF"
            android:hint="Masukkan file"
            android:drawableRight="@drawable/file"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#3381FF"
            android:text="Surat Nikah"/>
        <TextView
            android:layout_width="170dp"
            android:textSize="20dp"
            android:textColorHint="#3381FF"
            android:hint="Masukkan file"
            android:drawableRight="@drawable/file"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#3381FF"
            android:text="E-KTP Saksi 1"/>
        <TextView
            android:layout_width="170dp"
            android:textSize="20dp"
            android:textColorHint="#3381FF"
            android:hint="Masukkan file"
            android:drawableRight="@drawable/file"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="#3381FF"
            android:text="E-KTP Saksi 2"/>
        <TextView
            android:layout_width="170dp"
            android:textSize="20dp"
            android:textColorHint="#3381FF"
            android:hint="Masukkan file"
            android:drawableRight="@drawable/file"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/Login3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:text="Kirim"
        android:textSize="20dp"
        android:backgroundTint="#3381FF"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="55dp"
        android:background="#3381FF">

        <ImageView
            android:id="@+id/home"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/home1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="170dp"
            android:src="@drawable/calendar" />

    </LinearLayout>

</LinearLayout>